[user]
    name = Pierre Dulac
    email = dulacpier@gmail.com
    
[core]
    autocrlf = input
    safecrlf = false
    excludesfile = ~/.gitignore_global
    editor = vim

[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
    type = cat-file -t
    dump = cat-file -p
    today = !git log --since=midnight --author=\"$(git config user.name)\" --oneline

[color]
    branch = auto
    diff = auto
    interactive = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red
    new = cyan
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[apply]
    # Detect whitespace errors when applying a patch
    whitespace = fix

[diff]
    tool = vimdiff

[push]
    default = simple

[hub]
    protocol = https
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[url "https://"]
	insteadOf = git://
[http]
	cookiefile = /Users/dulacp/.gitcookies
[credential]
	helper = store
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[pull]
	rebase = true
